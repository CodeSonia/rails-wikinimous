<%= form_with model: @article, class: "max-w-2xl mx-auto bg-white rounded-lg shadow-lg p-6" do |f| %>
  <h1 class="text-3xl font-bold mb-6">New Article</h1>

   <div class="mb-4">
    <%= f.label :title, class: "block text-gray-700 font-bold mb-2" %>
    <%= f.text_field :title, class: "w-full border border-gray-300 rounded py-2 px-4" %>
  </div>

  <div class="mb-4">
    <%= f.label :content, class: "block text-gray-700 font-bold mb-2" %>
    <%= f.text_area :content, class: "w-full border border-gray-300 rounded py-2 px-4" %>
  </div>

  <%= f.submit "Create Article", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>

  <div class="mt-4">
    <%= link_to "Back", articles_path, class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded inline-flex items-center" %>
  </div>
<% end %>
