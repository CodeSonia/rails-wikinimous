<div class="max-w-4xl mx-auto px-6">
  <h1 class="text-4xl font-bold text-center my-8">Article</h1>

  <div class="bg-white rounded-lg shadow-lg mb-8">
    <div class="px-6 py-8">
      <h2 class="text-3xl font-bold mb-4"><%= @article.title %></h2>
      <p class="text-gray-700 text-lg leading-relaxed"><%= @article.content %></p>
    </div>
    <div class="px-6 py-4 flex justify-between">
      <%= link_to "Edit", edit_article_path(@article), class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Destroy", article_path(@article),
                            data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete?"},
                            class: "bg-red-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <%= link_to "Back to articles", articles_path, class: "text-blue-500 hover:underline bg-white font-bold py-2 px-4 rounded" %>
</div>
