<div class="bg-gray-200 py-4 px-8">
  <h1 class="text-4xl font-bold text-center mb-8">Articles</h1>

  <div class="flex justify-between items-center mb-4">
    <%= link_to "New article", new_article_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <% @articles.each do |article| %>
    <div class="bg-white p-6 rounded-lg shadow-lg mb-8">
      <%= link_to article_path(article), class: "text-blue-600 hover:underline" do %>
        <h2 class="text-2xl font-bold mb-4"><%= article.title %></h2>
      <% end %>
      <p class="text-gray-800"><%= article.content %></p>
    </div>
  <% end %>
</div>

